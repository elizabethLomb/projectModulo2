<!-- Modal comentarios -->
<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{> commentForm}}
        <hr/>

        {{!-- todos los comentarios --}}
        {{#each comments as |comment|}}
          <div class="card cardCommentModal">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 col-3">
                  <div class="userImage">
                    <img class="mr-3" src="{{comment.user.avatar}}" alt="{{user.username}}"/>
                  </div>
                </div>
                <div class="col-lg-10 col-md-9 col-9">
                  <div class="commentHeader mb-1 row no-gutters align-items-center">
                    <a class="font-weight-bold d-block" href="/{{comment.user.username}}" class="d-block">{{comment.user.username}}</a>
                    <small class="ml-3 text-muted">{{date comment.createdAt}}</small>
                  </div>
                  <div class="commentBody">
                    <a class="font-weight-bold d-block" href="{{user.username}}" class="d-block">{{comment.username}}</a>
                    <p class="card-text">{{comment.text}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="modal-footer">
        <a href="quejas/detalle/{{complain.id}}">Ver m√°s comentarios</a>
      </div>

    </div>
  </div>
</div>