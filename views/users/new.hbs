<div class="loginContainer card col-xl-6 col-lg-7 col-md-9 col-12">

  <div class="card-body">
    {{#if user.isNew}}
      <div action="/users" method="POST" enctype="multipart/form-data">
    {{else}}
      <form action="/me/edit" method="POST">
    {{/if}}
 

      <div class="form-group">
        <label for="name">Nombre</label> <span class="text-danger">*</span>
        <input minlength="3" name="name" type="text" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name" placeholder="Introduce tu nombre" value="{{ user.name }}">

        {{#if error.name}}
        <div class="invalid-feedback">
          {{error.name.message}}
        </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="lastname">Apellido</label>
        <input minlength="3" name="lastname" type="text" class="form-control {{#if error.lastname }}is-invalid{{/if}}" id="lastname" placeholder="Introduce tu apellido" value="{{ user.lastname }}">

        {{#if error.lastname}}
        <div class="invalid-feedback">
          {{error.lastname.message}}
        </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="city">Zona</label>
        <input name="city" type="text" class="form-control {{#if error.city }}is-invalid{{/if}}" id="city" placeholder="Introduce tu zona" value="{{ user.city }}">

        {{#if error.city}}
        <div class="invalid-feedback">
          {{error.city.message}}
        </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="bio">Bio</label>
        <textarea name="bio" type="text" class="form-control {{#if error.bio }}is-invalid{{/if}}" id="bio" placeholder="Introduce algo sobre ti" rows="4">{{ user.bio }}</textarea>

        {{#if error.bio}}
        <div class="invalid-feedback">
          {{error.bio.message}}
        </div>
        {{/if}}
      </div>

    {{#if user.isNew}}
      <div class="form-group">
        <label for="password">Contraseña</label> <span class="text-danger">*</span>
        <input minlength="6" name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password" placeholder="Introduce una contraseña" value="{{ user.password }}">

        {{#if error.password}}
        <div class="invalid-feedback">
          {{error.password.message}}
        </div>
        {{/if}}
      </div>
  

      <div class="form-group">
        <label for="avatar">Avatar</label>
        <input name="avatar" type="file" class="form-control-file {{#if error.avatar }}is-invalid{{/if}}" id="avatar" placeholder="" value="{{ user.avatar }}">

        {{#if error.avatar}}
        <div class="invalid-feedback">
          {{error.avatar.message}}
        </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="username">Nombre de usuario</label> <span class="text-danger">*</span>
        <input name="username" type="text" class="form-control {{#if error.username }}is-invalid{{/if}}" id="username" placeholder="Introduce un nombre de usuario" value="{{ user.username }}">

        {{#if error.username}}
        <div class="invalid-feedback">
          {{error.username.message}}
        </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="email">Email</label> <span class="text-danger">*</span>
        <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email" placeholder="Introduce tu email" value="{{ user.email }}">

        {{#if error.email}}
        <div class="invalid-feedback">
          {{error.email.message}}
        </div>
        {{/if}}
      </div>

    {{/if}}

    {{#if user.isNew}}
      <button type="submit" class="btn btn-primary float-right">Registro</button>
    {{else}}
      <button type="submit" class="btn btn-success float-right">Confirmar</button>
    {{/if}}
    
    <a href="/" class="btn btn-secondary text-white float-left">Atrás</a>


    </form>
  </div>
</div>